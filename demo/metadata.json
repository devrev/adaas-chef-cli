{
    "schema_version": "v0.2.0",
    "record_types": {
        "comment": {
            "fields": {
                "body": {
                    "is_required": true,
                    "type": "rich_text"
                },
                "by": {
                    "is_required": true,
                    "type": "reference",
                    "reference": {
                        "refers_to": {
                            "#record:user": {}
                        }
                    }
                },
                "parent": {
                    "is_required": true,
                    "type": "reference",
                    "reference": {
                        "refers_to": {
                            "#record:issue": {}
                        },
                        "reference_type": "parent"
                    }
                }
            },
            "is_loadable": true
        },
        "incident": {
            "name": "Incident Report",
            "fields": {
                "actual_close_date": {
                    "name": "Closed at",
                    "type": "timestamp"
                },
                "creator": {
                    "is_required": true,
                    "type": "reference",
                    "reference": {
                        "refers_to": {
                            "#record:user": {}
                        }
                    }
                },
                "owner": {
                    "is_required": true,
                    "type": "reference",
                    "reference": {
                        "refers_to": {
                            "#record:user": {}
                        }
                    }
                },
                "rca": {
                    "name": "Root cause analysis",
                    "type": "rich_text"
                },
                "severity": {
                    "name": "Severity",
                    "is_required": true,
                    "type": "enum",
                    "enum": {
                        "values": [
                            {
                                "key": "fatal"
                            },
                            {
                                "key": "severe"
                            },
                            {
                                "key": "minor"
                            }
                        ]
                    }
                },
                "status": {
                    "name": "Status",
                    "is_required": true,
                    "type": "enum",
                    "enum": {
                        "values": [
                            {
                                "key": "detected",
                                "name": "Detected"
                            },
                            {
                                "key": "mitigated",
                                "name": "Mitigated"
                            },
                            {
                                "key": "rca_ready",
                                "name": "RCA Ready"
                            },
                            {
                                "key": "archived",
                                "name": "Archived"
                            }
                        ]
                    }
                },
                "summary": {
                    "name": "Summary",
                    "is_required": true,
                    "type": "text"
                }
            },
            "category": "work",
            "stage_diagram": {
                "controlling_field": "status",
                "stages": {
                    "archived": {
                        "transitions_to": []
                    },
                    "detected": {
                        "transitions_to": [
                            "mitigated",
                            "archived",
                            "rca_ready"
                        ]
                    },
                    "mitigated": {
                        "transitions_to": [
                            "archived",
                            "detected"
                        ]
                    },
                    "rca_ready": {
                        "transitions_to": [
                            "archived"
                        ]
                    }
                },
                "starting_stage": "detected"
            }
        },
        "issue": {
            "fields": {
                "actual_close_date": {
                    "name": "Closed at",
                    "type": "timestamp"
                },
                "creator": {
                    "is_required": true,
                    "type": "reference",
                    "reference": {
                        "refers_to": {
                            "#record:user": {}
                        }
                    }
                },
                "headline": {
                    "name": "Headline",
                    "is_required": true,
                    "type": "text"
                },
                "owner": {
                    "is_required": true,
                    "type": "reference",
                    "reference": {
                        "refers_to": {
                            "#record:user": {}
                        }
                    }
                },
                "priority": {
                    "name": "Priority",
                    "is_required": true,
                    "type": "enum",
                    "enum": {
                        "values": [
                            {
                                "key": "P-0"
                            },
                            {
                                "key": "P-1"
                            },
                            {
                                "key": "P-2"
                            }
                        ]
                    }
                },
                "target_close_date": {
                    "type": "date"
                }
            },
            "is_loadable": true,
            "category": "work"
        },
        "knowledge_page": {
            "name": "Page",
            "fields": {
                "accessible_to": {
                    "type": "permission",
                    "collection": {},
                    "permission": {
                        "member_id": {
                            "refers_to": {
                                "#record:user": {}
                            }
                        },
                        "role": {
                            "values": [
                                {
                                    "key": "viewer",
                                    "name": "Viewer"
                                },
                                {
                                    "key": "editor",
                                    "name": "Editor"
                                }
                            ]
                        }
                    }
                },
                "content": {
                    "type": "rich_text"
                },
                "owner": {
                    "is_required": true,
                    "type": "reference",
                    "reference": {
                        "refers_to": {
                            "#record:user": {}
                        }
                    }
                }
            }
        },
        "user": {
            "fields": {
                "name": {
                    "is_required": true,
                    "type": "text",
                    "text": {
                        "min_length": 4,
                        "max_length": 99
                    }
                },
                "phone": {
                    "type": "struct",
                    "struct": {
                        "key": "phone_number"
                    }
                }
            }
        }
    },
    "struct_types": {
        "phone_number": {
            "name": "Phone number",
            "fields": {
                "area_code": {
                    "type": "text"
                },
                "country_code": {
                    "type": "text"
                },
                "number": {
                    "is_required": true,
                    "type": "text"
                }
            }
        }
    },
    "record_type_categories": {
        "work": {}
    }
}
